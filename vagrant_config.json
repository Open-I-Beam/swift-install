{
  "vagrant" : {
    "machines" : {
      "proxy" : {
        "num":1
      },
      "storage" : {
        "num":2,
        "disk":2,
        "disk_size":32
      },
      "client" : {
        "num":1
      },
      "dockerhub" : {
        "num":0
      }
    },
    "boxes" : {
      
      "centos7" : {
        "box": "centbox" , 
        "disk_controller" : "SATA Controller"
      },

      "ubuntu1404" : {
        "box": "ubuntu/trusty64" , 
        "box_url" : "https://vagrantcloud.com/ubuntu/boxes/trusty64",
        "disk_controller" : "SATAController"
      }
    
    },
    "ansible_cloud": {
      "playbook": "provisioning/main-vagrant.yml",
      "inventory_path": "provisioning/inventory/vagrant/swift_dynamic_inventory.py"
    },
    "box":"ubuntu1404",
    "cpus":2,
    "memory":2048,
    "ip_prefix":"192.169.70",
    "shell":["echo \"$(id)\"",
             "echo \"$(hostname)\""]
  },

  "ansible": {
    "fstype":"xfs",
    "groupvars":{
      "all":{
        "swift_git":"https://github.com/openstack/swift.git",
        "swift_git_tag":"2.3.0",
        "swift_git_dir":"/tmp/git/swift",
        "openstack_version":"kilo",
        "installation_source":"git",
        "keystone_admin_token":"ADMIN",
        "keystone_admin_password":"passw0rd",
        "swift_hash_path_prefix":"d55ca1881f1e09b1",
        "swift_hash_path_suffix":"a3f3c381c916a198",
        "swift_identity_password":"passw0rd",
        "openstack_region":1,
        "global_log_verbose":false,
        "global_log_debug":false  
      },
      "swift-ring-builder":{
        "ring_builder":{
          "object":{
            "part_power":"18",
            "replicas":"3",
            "min_part_hours":"1"
          },
          "container":{
            "part_power":"18",
            "replicas":"3",
            "min_part_hours":"1"
          },
          "account":{
            "part_power":"18",
            "replicas":"3",
            "min_part_hours":"1"
          }
        }
      },
      "swift-storage":{
        "account_server_port":6002,
        "container_server_port":6001,
        "object_server_port":6000
      },
      "swift-proxy":{
        "proxy_server_port":80
      }
    },
    "hostvars":{
      "all":{
        "ansible_ssh_user":"vagrant",
        "ansible_ssh_private_key_file":"~/.vagrant.d/insecure_private_key"
      }
    }
  }
}
